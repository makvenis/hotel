<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/icon_login_background"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.makvenis.hotel.registe.LoginActivity">

    <ImageView
        android:layout_marginTop="40dp"
        android:src="@drawable/icon"
        android:layout_gravity="center"
        android:layout_width="160dp"
        android:layout_height="160dp" />


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_email_120"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/mLoginName"
                android:layout_marginLeft="20dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:background="@null"
                android:inputType="text"
                android:hint="请输入账号"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

        </LinearLayout>

        <View
            android:id="@+id/mLoginLine1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_pass_120"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/mLoginPass"
                android:layout_marginLeft="20dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="*********"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

        </LinearLayout>

        <View
            android:id="@+id/mLoginLine2"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/mLoginPost"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:background="@drawable/background_round_color_25ccde"
            android:textSize="20sp"
            android:text="登陆"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/mLoginRegiste"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:background="@drawable/background_round_color_4475de"
            android:textSize="20sp"
            android:text="注册"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mLoginMsgPost"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:text="短信验证登陆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp" />

    </RelativeLayout>


</LinearLayout>
