<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:fitsSystemWindows="true"
    android:background="#fafafa"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.makvenis.hotel.registe.ClientRegisteActivity">

    <include layout="@layout/public_layout_bank"></include>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="32dp"
        android:text="短信验证码登陆"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/mPostClean1"
            android:text="手机号码归属地"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/mPostClean1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/icon_right_120"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="中国大陆"
            android:textSize="22sp" />

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            android:text="+86"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:hint="输入手机号码"
            android:inputType="number"
            android:id="@+id/mRegistePhone"
            android:background="@null"
            android:text="137 **** 7087"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/mPostClean"
            android:layout_gravity="center"
            android:src="@drawable/icon_clen_120"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <ImageView
        android:padding="10dp"
        android:background="#4a8fff"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <Button
        android:id="@+id/mPostCode"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#FFFFFF"
        android:background="#4a8fff"
        android:textSize="24sp"
        android:text="获取验证码"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


</LinearLayout>
