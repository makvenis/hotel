<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#FFFFFF"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.makvenis.hotel.personalCentre.PersonalActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <!-- 占位 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp">
                </LinearLayout>

                <include layout="@layout/public_layout_bank_background_white"></include>

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#6d2525">

                <!-- 1 -->
                <json.makvenis.com.mylibrary.json.view.SimpleImageViewCircleBitmap
                    android:id="@+id/mPersonalItemImage"
                    android:src="@drawable/icon_test"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

                <!-- 2 -->
                <LinearLayout
                    android:paddingLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <!-- 用户名 -->
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/icon_per_qianbi_120"
                            android:layout_width="16dp"
                            android:layout_height="16dp" />

                        <TextView
                            android:id="@+id/mPersonalName"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="makvenis"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <!-- 用户等级 -->
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/icon_per_lev_120"
                            android:layout_width="16dp"
                            android:layout_height="16dp" />

                        <TextView
                            android:id="@+id/mPersonalLev"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="makvenis"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 3 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 预留位置 -->
                    <Button
                        android:id="@+id/mPersonalItemOver"
                        android:background="@drawable/background_round_color_25ccde"
                        android:textColor="#FFFFFF"
                        android:text="退出"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </LinearLayout>

            <!-- 列表 -->
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/ll1"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- 用户功能列表 -->
                    <ImageView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_per_list_dingdan_120"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/mPersonalItemTitle1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#515151"
                        android:text="订单列表"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/mPersonalItemRemark1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="共计10单"
                        android:textColor="#656565"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <!-- 分割线 | -->
                <ImageView
                    android:background="#d4d4d4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/ll2"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- 用户功能列表 -->
                    <ImageView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_per_list_yue_120"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/mPersonalItemTitle2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#515151"
                        android:text="买单"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/mPersonalItemRemark2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="最近3号桌"
                        android:textColor="#656565"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <!-- 分割线 | -->
                <ImageView
                    android:background="#d4d4d4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/ll3"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- 用户功能列表 -->
                    <ImageView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_per_list_dingyue_120"
                        android:layout_width="46dp"
                        android:layout_height="46dp" />

                    <TextView
                        android:id="@+id/mPersonalItemTitle4"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#515151"
                        android:text="积分"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/mPersonalItemRemark4"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="可以使用"
                        android:textColor="#656565"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                </LinearLayout>

            </LinearLayout>
            <!-- 分割线 一 -->
            <ImageView
                android:background="#d4d4d4"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <!-- 列表 -->
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/ll4"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- 用户功能列表 -->
                    <ImageView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_per_list_history_120"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/mPersonalItemTitle3"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#515151"
                        android:text="预约清单"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <!-- 分割线 | -->
                <ImageView
                    android:background="#d4d4d4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/ll5"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- 用户功能列表 -->
                    <ImageView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_per_list_help_120"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/mPersonalItemTitle5"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#515151"
                        android:text="帮助"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <!-- 分割线 | -->
                <ImageView
                    android:background="#d4d4d4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/ll6"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- 用户功能列表 -->
                    <ImageView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_per_list_dingdan_120"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/mPersonalItemTitle6"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#515151"
                        android:text="积分"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/mPersonalItemRemark6"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="可以使用"
                        android:textColor="#656565"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>
            <!-- 分割线 一 -->
            <ImageView
                android:background="#d4d4d4"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <!-- 列表 -->
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/ll7"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- 用户功能列表 -->
                    <ImageView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_per_list_dingdan_120"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/mPersonalItemTitle7"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#515151"
                        android:text="积分"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/mPersonalItemRemark7"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="可以使用"
                        android:textColor="#656565"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <!-- 分割线 | -->
                <ImageView
                    android:background="#d4d4d4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/ll8"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- 用户功能列表 -->
                    <ImageView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_per_list_yue_120"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/mPersonalItemTitle8"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#515151"
                        android:text="积分"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/mPersonalItemRemark8"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="5积分"
                        android:textColor="#656565"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <!-- 分割线 | -->
                <ImageView
                    android:background="#d4d4d4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">




                </LinearLayout>

            </LinearLayout>
            <!-- 分割线 一 -->
            <ImageView
                android:background="#d4d4d4"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>





</LinearLayout>
