<?xml version="1.0" encoding="utf-8"?>
<!-- 图形圆角 背景渐变 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"></solid>
            <corners android:radius="10dp"></corners>
        </shape>
    </item>

    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:right="1dp"
        android:top="1dp"
        android:left="1dp">
        <shape>
            <gradient
                android:startColor="#4a8fff"
                android:endColor="#4accff"
                android:type="linear"
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5" />

            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
            <!-- 圆角 -->
            <corners
                android:radius="10dp" />
        </shape>
    </item>


</layer-list>